{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "composite": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noLib": false,
    "incremental": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@src/*": ["./src/*"]
    },
    "rootDirs": ["./src"]
  }
}
